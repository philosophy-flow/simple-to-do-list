<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>My List</title>
    <link rel="stylesheet" href="styles.css">
  </head>

  <body>
    <h1><%= listName %></h1>
    <div class="box">
      <% listContent.forEach(function(item) { %>
        <div class="item">
          <form action="/delete" method="post">
            <input type="checkbox" name="itemId" value="<%= item._id %>" onClick="this.form.submit()">
            <p><%= item.name %></p>
          </form>
        </div>
      <% }) %>
    </div>

    <form action="/" method="post">
      <input type="text" name="newItem" placeholder="Enter item" autocomplete="off">
      <button type="submit">Add</button>
    </form>

    <footer>Copyright JgS 2020</footer>
  </body>
</html>
